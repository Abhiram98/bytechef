extend type Query {
    mcpComponent(id: ID): McpComponent
    mcpComponents: [McpComponent]
    mcpComponentsByServerId(mcpServerId: ID): [McpComponent]
}

type McpComponent {
    id: ID!
    componentName: String!
    componentVersion: Int!
    mcpServerId: ID!
    connectionId: ID
    mcpTools: [McpTool]
    createdBy: String
    createdDate: Long
    lastModifiedBy: String
    lastModifiedDate: Long
    version: Int
}
